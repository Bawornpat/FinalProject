                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:text="อัพเดต "
                        android:textSize="18dp"
                        android:textColor="@color/yello"/>
